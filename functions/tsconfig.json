{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",

    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "es2017",

    "sourceMap": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
